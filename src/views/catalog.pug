      }

      .modal-btn-secondary {
        background: #f8f9fa;
        color: var(--text-primary);
        border: 1px solid var(--border-color);
      }

      .modal-btn-secondary:hover {
        background: #e9ecef;
        transform: translateY(-2px);
      }

      @media (max-width: 768px) {
