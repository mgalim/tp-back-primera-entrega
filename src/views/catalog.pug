        }

        .sale-modal-content {
          padding: 20px;
          margin: 20px;
        }

        .modal-actions {
          flex-direction: column;
        }

        .modal-content {
          padding: 30px 20px;
        }

        .modal-buttons {
          flex-direction: column;
        }
      }

