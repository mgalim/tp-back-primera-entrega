doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Login - Rompiendo CÃ³digos
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
    style.
      body {
        background-color: #0a0a0a;
        color: #ffffff;
        height: 100vh;
        display: flex;
        align-items: center;
      }
      .login-container {
        background: rgba(26, 71, 42, 0.9);
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 0 20px rgba(76, 175, 80, 0.3);
      }
      .form-control {
        background-color: rgba(255, 255, 255, 0.9);
      }
      .btn-login {
        background-color: #4caf50;
        border: none;
      }
      .btn-login:hover {
        background-color: #45a049;
      }
      .error-message {
        color: #ff6b6b;
        display: none;
      }

  body
    .container
      .row.justify-content-center
        .col-md-6.col-lg-4
          .login-container
            h2.text-center.mb-4 
              span.chemical-symbol Ro
              | mpiendo 
              span.chemical-symbol Co
              | digos
            form#loginForm(action='/auth/login', method='POST')
              .mb-3
                label.form-label(for='email') Email
                input#email.form-control(type='email', name='email', required)
              .mb-3
                label.form-label(for='password') Password
                input#password.form-control(type='password', name='password', required)
              .d-grid.gap-2
                button.btn.btn-login.btn-lg.text-white(type='submit') Login
              #errorMessage.error-message.text-center.mt-3

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script.
      document.getElementById('loginForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const errorMessage = document.getElementById('errorMessage');
        
        try {
          const response = await fetch('/auth/login', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              email: document.getElementById('email').value,
              password: document.getElementById('password').value,
            }),
          });

          const data = await response.json();
          
          if (response.ok) {
           if (data.user.role === 'cliente') {
            window.location.href = '/customer/dashboard';
           }else {
            window.location.href = '/products/catalog';
           }
          } else {
            errorMessage.style.display = 'block';
            errorMessage.textContent = data.message || 'Invalid credentials';
          }
        } catch (error) {
          errorMessage.style.display = 'block';
          errorMessage.textContent = 'An error occurred. Please try again.';
        }
      });